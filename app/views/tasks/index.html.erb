<h1>All Tasks</h1>

<%= link_to "Create a new task", new_task_path %>

<ul>
<% @tasks.each do |task| %>
  <li>
    <span>
      <% if task.completed? %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
    </span>

    <%= link_to task.title, task_path(task)%>
    -
    <span>
      <%= link_to task_path(task),
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete #{task.title}?" } do %>
                    <i class="far fa-trash-alt"></i>
                  <% end %>
    </span>
  </li>
<% end %>
</ul>
